@model CategoryProcessPageVm


    <h3>Kategori eklemek icin <a asp-action="CreateCategory" asp-controller="Category">tıklayınız</a>   </h3>

    <h1>En populer kategoriniz : @Model.TheMostPopularCategory.CategoryName</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Isim</th>
            <th>Guncelle</th>
            <th>Sil</th>

        </tr>
    </thead>


    <tbody>

        @foreach (CategoryResponseModel item in Model.Categories)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CategoryName</td>
                <td><a asp-action="UpdateCategory" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-warning">Guncelle</a>   </td>

                <td><a asp-action="DeleteCategory" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger">Sil</a> </td>
               
            </tr>
        }




    </tbody>
</table>